<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State ketika tombol ditekan -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_green" /> <!-- Warna saat ditekan -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- State default -->
    <item>
        <shape>
            <solid android:color="@color/green" /> <!-- Warna default -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
